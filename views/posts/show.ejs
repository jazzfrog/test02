<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class="posts">
      <% include partials/top %>

      <!-- main start -->

<div class="show">
  <h3><%= post.title %></h3>
  <div class="time">Created At <br>
    <%= post.createdAt.toLocaleDateString() %> <br>
    <%= post.createdAt.toLocaleTimeString() %>
  </div>
  <% if(post.updatedAt) { %>
    <div class="time">Updated At <br>
      <%= post.updatedAt.toLocaleDateString() %> <br>
      <%= post.updatedAt.toLocaleTimeString() %>
    </div>
  <% } %>
  <p class="body"><%= post.body %> <p>
  <div class="float_right">Author: <%= post.author.nickname %><div>
  <% if(user && user.equals(post.author._id)) { %>
  <div class="tools">
    <a href="/posts/<%= post._id %>/edit"><button style="width:150px;">Edit</button></a>
    <!-- delete button here -->
    <form class="btn_del" action="/posts/<%= post._id %>?_method=delete" method="post">
      <button type="submit" style="width:150px;">Delete</button>
    </form>
  </div>
  <% } %>
  <a href="/posts"><button  style="width:150px;">Back to List</button></a>
</div>

      <!-- main end -->
    </div>
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
