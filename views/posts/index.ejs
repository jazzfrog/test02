<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class="posts">
      <% include partials/top %>

      <!-- main start -->

<div class="index">
  <a href="/posts/new"><button style="width:150px;">New</button></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <% if(user) { %>
    <a href="/logout" class="float_right"><button style="width:100px;">Logout</button><a>
    <a href="/users/<%= user._id %>" class="float_right"><button style="width:150px;">My Profile(<%= user.nickname %>)</button></a>
  <% } else { %>
    <a href="/login" class="float_right"><button style="width:100px;">Login</button><a>
    <a href="/users/new" class="float_right"><button style="width:150px;">Sign Up</button></a>
  <% } %>
  <ul>
    <li class="header">Title
      <span class="float_right">Date</span>
      <span class="float_right">Author</span>
    </li>
    <% data.forEach(function(e){ %>
      <li>
        <a href="/posts/<%= e._id %>"><%= e.title %></a>
        <span class="float_right"><%= e.createdAt.toLocaleDateString() %></span>
        <span class="float_right"><%= e.author.nickname %></span>
      </li>
    <% }); %>
  </ul>
</div>
count = <%= cntt.count %>

      <!-- main end -->
    </div>
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
